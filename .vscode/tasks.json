{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake-kit: Configure",
            "type": "cmake",
            "command": "configure",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake-kit: Build",
            "type": "cmake",
            "command": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake-kit: Rebuild",
            "type": "cmake",
            "command": "cleanRebuild",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": "CMake-kit: Configure",
            "detail": "Clean and rebuild the entire project"
        },
        {
            "label": "CMake-kit: Clean",
            "type": "cmake",
            "command": "clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build & Flash",
            "type": "shell",
            "command": "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/openocd",
            "args": [
                "-s",
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/share/openocd/scripts",
                "-f",
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/wch-riscv.cfg",
                "-c",
                "chip_id CH32L10x",
                "-c",
                "init",
                "-c",
                "halt",
                "-c",
                "program ${workspaceFolder}/build/${config:WCH_ELF_FILENAME} verify reset",
                "-c",
                "exit"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "CMake-kit: Build",
            "detail": "Flash firmware directly using OpenOCD command line"
        },
        {
            "label": "Generate Documentation",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "doc_doxygen"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "CMake-kit: Build",
            "detail": "Generate API documentation using Doxygen"
        },
    ]
}