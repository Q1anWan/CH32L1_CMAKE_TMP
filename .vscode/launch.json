{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with WCH-Link",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/${config:WCH_ELF_FILENAME}",
            "configFiles": [
                "wch-riscv.cfg"
            ],
            "searchDir": [
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin"
            ],
            "serverpath": "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/openocd",
            "openOCDLaunchCommands": [
                "init",
                "halt"
            ],
            "preLaunchCommands": [
                "set mem inaccessible-by-default off",
                "set architecture riscv:rv32",
                "set remotetimeout unlimited",
                "set disassembler-options xw"
            ],
            "gdbPath": "${config:WCH_TOOLCHAIN_BASE}/${config:WCH_GCC_NAME}/bin/riscv-wch-elf-gdb",
            "toolchainPrefix": "riscv-wch-elf",
            "device": "CH32L103C8T6",
            "interface": "swd",
            "runToEntryPoint": "handle_reset",
            "showDevDebugOutput": "raw",
            "preLaunchTask": "CMake Build",
            "postLaunchCommands": [
                "monitor reset halt",
                "load"
            ],
            "svdFile": "${workspaceFolder}/.vscode/CH32L103xx.svd"
        },
        {
            "name": "Attach to Chip",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/${config:WCH_ELF_FILENAME}",
            "configFiles": [
                "wch-riscv.cfg"
            ],
            "searchDir": [
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin"
            ],
            "serverpath": "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/openocd",
            "gdbPath": "${config:WCH_TOOLCHAIN_BASE}/${config:WCH_GCC_NAME}/bin/riscv-wch-elf-gdb",
            "toolchainPrefix": "riscv-wch-elf",
            "device": "CH32L103C8T6",
            "showDevDebugOutput": "raw",
            "preLaunchCommands": [
                "set mem inaccessible-by-default off",
                "set architecture riscv:rv32",
                "set remotetimeout unlimited",
                "set disassembler-options xw"
            ],
            "svdFile": "${workspaceFolder}/.vscode/CH32L103xx.svd"
        },
        {
            "name": "Download and Run",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/openocd",
            "args": [
                "-s",
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/share/openocd/scripts",
                "-f",
                "${config:WCH_TOOLCHAIN_BASE}/OpenOCD/OpenOCD/bin/wch-riscv.cfg",
                "-c",
                "chip_id CH32L10x",
                "-c",
                "init",
                "-c",
                "halt",
                "-c",
                "program ${workspaceFolder}/build/${config:WCH_ELF_FILENAME} verify reset",
                "-c",
                "exit"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "preLaunchTask": "CMake Build"
        }
    ]
}